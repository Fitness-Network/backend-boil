{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@decorators/*": [
        "src/decorators/index"
      ],
      "@guards": [
        "src/guards/index"
      ],
      "@base": [
        "src/base/index"
      ],
      "@interceptors": [
        "src/interceptors/index"
      ],
      "@utils": [
        "src/utils/index"
      ],
      "@types": [
        "src/types/index"
      ],
    }
  }
}
